---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "bio" : "{{ post.bio | strip_html | strip_newlines | escape }}",
      "category" : "{{post.tag}}",
      "url"      : "{{ site.url }}{{ post.url }}"

    } {% unless forloop.last %},{% endunless %}
  {% endfor %},

  {% for nav in site.data.navegation %}
    {
      "title"    : "{{ nav.name | escape }}",
      "bio" : "{{ nav.bio | strip_html | strip_newlines | escape }}",
      "category" : "{{nav.category}}",
      "url"      : "{{ site.url }}{{ nav.url }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %},

  {% for class in site.data.classes %}
    {
      "title"    : "{{ class.name | escape }}",
      "bio" : "{{ class.bio | strip_html | strip_newlines | escape }}",
      "category" : "{{class.category}}",
      "url"      : "{{ site.url }}{{ class.url }}"

    } {% unless forloop.last %},{% endunless %}
  {% endfor %}

]
